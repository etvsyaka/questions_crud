{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>Question</h1>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>QuestionText</th>
                    <td>{{ question.questionText }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary" href="{{ path('question_index') }}">Back to list</a>
            <a class="btn btn-success" href="{{ path('question_edit', {'id': question.id}) }}">Edit</a>

            {{ include('question/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
